reset()
  margin 0
  padding 0

rhythm(size, ratio)
  font-size size * ratio
  line-height size

unlist()
  reset()
  & > li
    list-style-type none
    reset()

row(-wrap)
  display flex
  flex-flow row -wrap

column(-wrap)
  display flex
  flex-flow column -wrap

gutter(n)
  & > *
    margin-right n !important

    &:last-child
      margin-right 0 !important

google-font(name)
  "https://fonts.googleapis.com/css?family="+replace(" ", "+", name)

$font-copy = -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
$font-body = $font-copy
$font-mono = $font-copy
$font-label = $font-copy
$font-heading = $font-copy

// @import url(google-font($font-copy + ":400,700,400i,700i"))
// @import url(google-font($font-heading + ":400,700,400i,700i"))

html
  font-size (10 * (2/3))px

body
  margin 0 auto
  padding 4rem 2rem

  font-family $font-copy
  rhythm 4rem (2/3)
  color #555

  min-height 100vh

  width 100vw
  min-width 30ch
  max-width 60ch

  header
    img.logo
      max-width 30rem

  main

    h1, h2, h3, h4, h5, p, li
      reset()
      margin-bottom 1rem

    h1
      font-family $font-heading
      rhythm 7rem .9
      margin-top 24rem
      padding-bottom 1rem
      border-bottom 1px solid silver
      margin-bottom 1rem

      & + p
        font-style italic
        font-family $font-heading

    h5
      rhythm 4rem (3/4)

    p + h5
      margin-top 6rem

    a
      color #005490

      &:hover, &:visited
        color #59aff4

  footer
    margin-top 4rem
    border-top 1px solid silver
    padding-top 4rem
    rhythm 3rem, .7
    text-align center

    & > p
      margin 0
