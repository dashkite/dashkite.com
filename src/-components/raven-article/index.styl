@require "../../styles"

:host
  display block

:host(.no-title) h1
  display none

.banner
  reset block
  column nowrap
  position relative

  & > img
    reset block
    max-width 100%
    height 60vh
    object-fit cover
    // filter blur(2px)

  & > h2
    reset block
    position absolute
    bottom 0
    z-index 1
    padding 4rem
    type banner
    color white
    background: rgba(0,0,0,0.33)

article
  type copy
  padding 8rem
  max-width 96rem

  article h1 h2 h3 h4 h5 p ul li blockquote

  h1
    type heading very-large
  h2
    type heading large

  a
    display inline-block
    text-align center
    width available
    padding 0.5rem 1rem
    text-decoration none
    border-bottom 2px solid darker-kite-blue
    colors inherit lightest-kite-blue
    &:visited
      colors inherit lightest-kite-blue
    &:focus
      outline none
      colors inherit light-kite-blue

  figure
    float right
    border round
    width 36rem
    padding 1rem
    & > img
      width 100%
      object-fit contain
    & > figcaption
      margin-top 1rem
      border top
      padding-top 1rem
      type body small
