@keyframes fadeInLeft {

  from {
    opacity: 0;
    transform translateX(-100%)
  }

  to {
    opacity: 1;
    transform none
  }
}

@keyframes fadeOutRight {
  from {
    transform none
    opacity: 1;
  }

  to {
    opacity: 0;
    transform translateX(100%)
  }
}

:root
  --foreground-color black
  --background-color white
  --accent-color #883ABE
  --secondary-background-color #D1C1D8

  --heading-text-color var(--foreground-color)
  --body-text-color #333
  --link-text-color #883ABE

  --background white
  --secondary-background linear-gradient( #D1C1D8, #F2E1C8 )

  --border-color var(--accent-color)
  --border 1px solid var(--border-color)

  --button-text-color #883ABE
  --disabled-button-text-color #883ABE
  --disabled-button-opacity 0.5
  --button-background-color transparent
  --button-background var(--button-background-color)
  --button-border-color var(--accent-color)
  --small-border-radius 0.25rem
  --large-border-radius 0.5rem
  --border-radius var(--small-border-radius)
  --button-border-radius var(--border-radius)

  --logo-text-color #783664

html
  font-family \
    ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont,
    "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif,\
    "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol",\
    "Noto Color Emoji"

body
  margin 0
  padding 0
  width 100vw
  height 100vh
  display grid
  grid-template-rows 6rem 1fr 4rem
  color var(--body-text-color)

  & > header
    margin 0
    padding 1rem
    padding-right 2rem
    width stretch
    width -webkit-fill-available
    width -moz-available
    display flex
    column-gap 1rem
    justify-content space-between
    align-items center
    & > .logo
      margin 0
      padding 0
      display flex
      align-items center
      & > span
        font-family proxima-nova, sans-serif
        font-size 1.33rem
        line-height 1.33rem
        background-color var(--logo-text-color)
        color var(--background-color)
        border-radius 0.25rem
        margin-bottom -7px
        padding 9px 15px 11px 15px
      & > img
        height 2rem
        margin-right 8px
    & > vellum-nav
      background-color var(--background-color)
      color var(--button-text-color)
      line-height 1.25rem
      font-size 1rem
      --item-margin 3rem
      --icon-size 1.25rem
      --icon-margin 0.5rem

h1, h2, h3, h4
  margin 0
  padding 0
  
h1
  font-size 2.5rem
  line-height 1
h2
  font-size 2rem
  line-height 1
h3
  font-size 1.75rem
  line-height 2rem

main
  display block
  width 100%
  height 100%

  .page
    display block
    width 100%
    height 100%

    &:not(.active)
      display none

    & > .view
      display flex
      flex-wrap wrap
      justify-content center
      width 100%
      height 100%

      &:not(.active)
        display none

      & > article
        display flex
        flex-flow column
        gap 2rem
        max-width 40rem

      &[data-name="connect"]
        & > article
          display flex
          flex-flow column
          gap 1rem
          max-width 40rem
