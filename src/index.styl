@keyframes fadeInLeft {

  from {
    opacity: 0;
    transform translateX(-100%)
  }

  to {
    opacity: 1;
    transform none
  }
}

@keyframes fadeOutRight {
  from {
    transform none
    opacity: 1;
  }

  to {
    opacity: 0;
    transform translateX(100%)
  }
}

rhythm(base, exp, scale, ratio )
  line-height (base * (scale ** exp))
  font-size (@line-height * ratio)

:root
  --brand-color #783664
  --primary-color var(--brand-color)
  --primary-accent-color #883ABE

  --darkest-neutral black
  --lightest-neutral white

  --logo-text-color var(--brand-color)

html
  font-family \
    ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont,
    "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif,\
    "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol",\
    "Noto Color Emoji"

body
  margin 0
  padding 0
  width 100vw
  height 100vh
  display grid
  grid-template-rows 6rem 1fr 4rem
  background var(--lightest-neutral)
  color var(--darkest-neutral)

  & > header
    margin 0
    padding 1rem
    padding-right 2rem
    width stretch
    width -webkit-fill-available
    width -moz-available
    display flex
    column-gap 1rem
    justify-content space-between
    align-items center
    & > .logo
      margin 0
      padding 0
      display flex
      align-items center
      & > span
        font-family proxima-nova, sans-serif
        font-size 1.33rem
        line-height 1.33rem
        background-color var(--logo-text-color)
        color var(--lightest-neutral)
        border-radius 0.25rem
        margin-bottom -7px
        padding 9px 15px 11px 15px
      & > img
        height 2rem
        margin-right 8px

h1, h2, h3, h4, h5, p, ul, ol, blockquote
  margin 0
  padding 0

h1, h2, h3, h4, h5
  font-weight bold

h1
  rhythm 1rem, 1.25, 5, 0.9

h2
  rhythm 1rem, 1.25, 4, 0.9

h3
  rhythm 1rem, 1.25, 3, 0.9

h4
  rhythm 1rem, 1.25, 2, 0.9

h5
  rhythm 1rem, 1.25, 1, 0.9

main
  display block
  width 100%
  height 100%

  .page
    display block
    width 100%
    height 100%

    &:not(.active)
      display none

    & > .view
      display flex
      flex-wrap wrap
      justify-content center
      width 100%
      height 100%

      &:not(.active)
        display none

      & > article
        display flex
        flex-flow column
        max-width 70ch

        & > * + *
          margin-top 2rem

      &[data-name="root"]
        justify-content center
        align-items center
        & > article 
          & > p
            rhythm 1rem, 1.25, 3, 0.5
            text-align center

            & > a
              background var(--primary-accent-color)
              color white
              padding 1rem
              text-decoration none
              border-radius 0.5rem
