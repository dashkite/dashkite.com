@require "styles/theme"
@require "styles/layout"
@require "styles/article"
@require "styles/typography"
@require "styles/links"
@require "styles/cards"

body
  background whitesmoke

main

  & > .promo
    margin-top 6rem
    text-align center
    max-width 60ch

    & > * + *
      margin-top 2rem

    h1
      line-height 4rem
      font-size calc(4rem * 0.9)
      
    p
      line-height 2rem
      font-size calc(2rem * 0.85)

    & > .cta
      margin-top 3rem
      & > p > a
        background var(--button-background-color)
        color var(--button-foreground-color)
        padding 1rem
        text-decoration none
        border-radius 0.5rem

  section[ name = "team" ]
    & + .cards
      margin-top 4rem

      & > .card 
        & > .social
          margin-top 0.5rem
          display flex
          gap 0.5rem
          line-height 1.25rem
          font-size 1.25rem
        & > img
          filter: grayscale(100%) sepia(50%) hue-rotate(270deg)