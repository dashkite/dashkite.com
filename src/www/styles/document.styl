:root
  --brand-blue #61D3FF

  --foreground #0a080c
  --background #F5F6F4
  --accent var(--foreground)

  --info #234467
  --success #53ba83
  --warning #d0aa4b
  --danger #f44336

  --dark-background #002a3a
  --dark-text rgba(255, 255, 255, 0.8)


html
  // font-size 8px
  /* System */
  font-family system, -apple-system, ".SFNSText-Regular", "San Francisco", "Roboto", "Segoe UI", "Helvetica Neue", "Lucida Grande", sans-serif;

a, a:visited, a:hover
  text-decoration none
  color inherit

:focus
  outline none
  box-shadow 0 0 0 1px #333

body
  margin 0
  display grid
  grid-template-rows auto 1fr auto
  height 100vh
  color var(--text)
  background-color var(--background)

  & > header
    background-color white
    padding 1.25rem
    border-bottom 1px solid var(--accent)
    margin-bottom 1.25rem
    .logo
      width min-content
      & > a
        display block
        & > img
          height 2.5rem

main
  padding 1rem

  display flex
  flex-flow column
  align-items center

  overflow-y scroll

  border-color silver

footer
  vellum-nav
    --background var(--dark-background)
    --text var(--dark-text)
    --accent var(--dark-text)
