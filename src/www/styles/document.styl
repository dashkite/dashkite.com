:root
  --kite-blue #61d3ff
  --kite-alt-blue #25a6e3

html
  font-size (6 + 2/3)px
  /* System */
  font-family: system, -apple-system, ".SFNSText-Regular", "San Francisco", "Roboto", "Segoe UI", "Helvetica Neue", "Lucida Grande", sans-serif;

a, a:visited, a:hover
  text-decoration none
  color inherit

body
  margin 0
  display grid
  grid-template-rows auto 1fr auto
  height 100vh
  color #060609
  background-color #fafafc

  & > header
    padding 3rem
    border-bottom 1px solid silver
    margin-bottom 3rem
    .logo
      height 6rem

main
  padding 3rem

  display flex
  flex-flow column
  align-items center

  overflow-y scroll

  article, header
    width 100%
    max-width 96rem

  article, header
    margin-bottom 3rem

  h1, h2, h3, h4, p, ul, blockquote
    box-sizing border-box
    margin 0
    padding 0
    margin-bottom 3rem

    &:last-child
      margin-bottom 0

  h1 + h2, h2 + h3, h3 + h4
    margin-top 4rem

  li
    box-sizing border-box
    margin 0
    padding 0
    margin-bottom 2rem

    &:last-child
      margin-bottom 0

  h1
    line-height 7rem
    font-size 6.3rem
  h2
    line-height 5rem
    font-size 4.5rem
  h3
    line-height 4rem
    font-size 3.6rem

  h4
    line-height 4rem
    font-size (4 * 3/4)rem

  p, ul, li, blockquote
    line-height 4rem
    font-size (4 * 2/3)rem

  a, a:visited, a:hover
    display inline
    text-decoration underline

  ul > li
      margin-left 1em

footer
  line-height 3rem
  font-size 2.4rem

  nav
    display flex
    justify-content center
    color white
    background-color var(--kite-alt-blue)

    & > a
      // width needs to be evenly divisible into 48rem
      // otherwise we'll have little wasted margins
      // so either 8 or 12 rem ... 12 for now until
      // we add two more buttons
      width 12rem
      padding 3rem 1rem 1rem 1rem
      display flex
      flex-flow column
      align-items center
      justify-content flex-start
      text-decoration none

      & > svg
        margin-bottom 1rem
        display inline-block
        fill @color
        // overflow visible
        height 4rem
        width 4rem

      & > span
        text-align center
