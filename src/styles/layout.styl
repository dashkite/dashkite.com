body
  margin 0
  padding 0
  width 100vw
  height 100vh
  overflow hidden

  display grid
  grid-template-rows 6rem 1fr 4rem

  & > header
    margin-bottom 1rem
    border-bottom 1px solid var(--border-color)
    // padding-bottom 1rem

    padding-left 1rem
    padding-right 2rem

    display flex
    column-gap 1rem
    justify-content space-between
    align-items center

    & > a > img[ name = "logo" ]
      height 2rem
      margin-right 8px

    & > nav
      display flex
      column-gap 1rem
      justify-content space-between
      align-items center

      @media screen and (min-width: 600px)
        & > a        
          & > * + *
            margin-left 0.5rem

      @media screen and (max-width: 600px)
        & > a
          display flex
          flex-flow column
          align-items center
          justify-content center
          row-gap 0.25rem

  & > main
    display flex
    flex-flow column
    align-items center
    overflow-y scroll
  
  & > footer
    margin-top 1rem
    border 1px solid var(--border-color)
    padding-top 1rem
    padding-bottom 1rem
    text-align center

    & > p
      line-height 0.75rem
      font-size calc(0.75rem * 0.9)    