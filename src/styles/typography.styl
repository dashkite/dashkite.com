@layer reset

  html
    font-family \
      ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont,
      "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif,\
      "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol",\
      "Noto Color Emoji"

  h1, h2, h3, h4, h5, p, ul, ol, blockquote
    margin 0
    padding 0

  h1, h2, h3, h4, h5
    font-weight bold

  h1
    line-height 2.5rem
    font-size calc(2.5rem * 0.9)

  h2
    line-height 2rem
    font-size calc(2rem * 0.9)
    
  p, li, blockquote
    line-height 1.75rem
    font-size calc(1.75rem * 0.6)