kite-blue = #61d3ff
kite-alt-blue = #25a6e3

html
  font-size (6 + 2/3)px
  /* System */
  font-family: system, -apple-system, ".SFNSText-Regular", "San Francisco", "Roboto", "Segoe UI", "Helvetica Neue", "Lucida Grande", sans-serif;

a, a:visited, a:hover
  text-decoration none
  color inherit

body
  margin 0
  display grid
  grid-template-rows auto 1fr auto
  height 100vh

  & > header
    padding 3rem
    border-bottom 1px solid silver
    margin-bottom 3rem
    .logo
      height 6rem

main
  padding 3rem

  display flex
  flex-flow column
  align-items center

  overflow-y scroll

  article, header
    width 100%
    max-width 96rem

  article
    margin-bottom 4rem

  & > header
    margin-bottom 4rem
    text-align center


  h1, h2, h3, p, ul, li, blockquote
    margin 0
    padding 0

  h1, h2, h3
    margin-bottom 4rem

  h1
    line-height 7rem
    font-size 6.3rem
  h2
    line-height 5rem
    font-size 4.5rem
  h3
    line-height 4rem
    font-size 3.6rem

  p, ul, li, blockquote
    line-height 4rem
    font-size (8/3)rem
    margin-bottom 3rem

  a, a:visited, a:hover
    display inline-block
    text-align center
    width available
    padding 0 0.5rem
    text-decoration none
    border-bottom 2px solid kite-alt-blue
    background-color lighten(kite-blue, 40%)
    &:visited
      background-color lighten(kite-blue, 40%)
    &:focus
      outline none
      background-color lighten(kite-blue, 80%)



footer
  line-height 3rem
  font-size 2.4rem

  nav
    display flex
    justify-content center
    color white
    background-color kite-alt-blue

    & > a
      // width needs to be evenly divisible into 48rem
      // otherwise we'll have little wasted margins
      // so either 8 or 12 rem ... 12 for now until
      // we add two more buttons
      width 12rem
      height 12rem
      padding 1rem
      display flex
      flex-flow column
      align-items center
      justify-content center
      text-decoration none

      & > svg
        margin-bottom 1rem
        display inline-block
        fill @color
        // overflow visible
        height 4rem
        width 4rem
