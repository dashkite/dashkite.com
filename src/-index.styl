html, body
  box-sizing border-box
  display block

  margin 0
  padding 0
  border 0

  font-family inherit
  font-size inherit
  line-height inherit

  &:before, &:after
    box-sizing inherit

  background-color #fffaf0

html
  font-size (6 + 2/3)px

body > main
  display flex
  height 100vh
  justify-content center
  align-items center
